# Exemplo de variáveis de ambiente para desenvolvimento
# NÃO coloque segredos reais aqui — use este arquivo como referência.

# Banco de dados (Prisma/Database)
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"
SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/shadow_db"

# URL da API usada pelo frontend
NEXT_PUBLIC_API_URL=http://localhost:3000

# Porta da aplicação (opcional)
PORT=3000

# Ambiente
NODE_ENV=development

# Secret para tokens/sessões — substitua em produção
NEXTAUTH_SECRET=change-me
